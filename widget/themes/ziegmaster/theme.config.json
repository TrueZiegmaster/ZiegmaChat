{
    "fields": {
        "font-size" : {
            "label": "Font size",
            "input-type": "number",
            "value": {
                "data-type": "integer",
                "default": 12
            },
            "enabled": true
        },
        "chat-align" : {
            "label": "Chat messages position",
            "input-type": "select",
            "options": [
                "Left",
                "Right"
            ],
            "value": {
                "data-type": "string",
                "default": "Left"
            },
            "enabled": true
        },
        "hide-delay" : {
            "label": "Message hide delay\n(1000 = 1s, 0 to disable)",
            "input-type": "number",
            "value": {
                "data-type": "integer",
                "default": 15000
            },
            "enabled": true
        },
        "animate" : {
            "label": "Enable animations",
            "input-type": "checkbox",
            "value": {
                "data-type": "boolean",
                "default": true
            },
            "enabled": true
        },
        "show-animation" : {
            "label": "Message show animation\n(Currently disabled)",
            "input-type": "select",
            "options": [
                "bounceIn"
            ],
            "value": {
                "data-type": "string",
                "default": "bounceIn"
            },
            "enabled": false
        },
        "hide-animation" : {
            "label": "Message hide animation\n(Currently disabled)",
            "input-type": "select",
            "options": [
                "fadeOut"
            ],
            "value": {
                "data-type": "string",
                "default": "fadeOut"
            },
            "enabled": false
        }
    }
}